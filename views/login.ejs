<div class="loggingContainer">
  <%- include("./partials/navbar.ejs") %>
  <div class="loggingFormContainer">
    <h1 class="loggingHeader">Account Login</h1>
    <%- include("./partials/flashError.ejs") %>
    <form action="/auth/login" method="POST">
      <label class="loggingLabel" for="username">Username</label>
      <input
        name="reg[username]"
        id="username"
        type="text"
        placeholder="Enter username"
        class="loggingText"
        required
      />
      <label class="loggingLabel" for="regpassword">Password</label>
      <input
        name="reg[password]"
        id="regpassword"
        type="password"
        placeholder="Enter password"
        class="loggingText"
        required
      />
      <button class="btnLogin">Log In</button>
    </form>
  </div>
  <div class="signUpContainer">
    <a href="/auth/register">Need an account? Sign up</a>
  </div>
</div>
